// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  // This helps Windows find the correct file
  binaryTargets = ["native"] 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma

model Role {
  id          String   @id @default(uuid())
  name        String   @unique  // "ADMIN", "VENDOR", "CUSTOMER", etc.
  slug        String   @unique  // "admin", "vendor", "customer", etc.
  description String?
  permissions String[] // Array of permission strings
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
}

model User {
  id                String   @id @default(uuid())
  name              String
  email             String   @unique
  password          String
  roleId            String?  // Reference to Role model
  role              Role?    @relation(fields: [roleId], references: [id])
  gstin             String?
  company           String?
  
  // NEW: Verification Fields
  emailVerified     DateTime?
  verificationToken String?   @unique
  resetToken        String?   @unique
  resetTokenExpiry  DateTime?
  
  orders            RentalOrder[]
}
model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  products    Product[]
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  hourlyPrice Float    @default(0)
  dailyPrice  Float    // Primary rental rate
  totalStock  Int      // Critical for reservation logic
  isRentable  Boolean  @default(true)
  image       String?
  lines       OrderLine[]
}

model RentalOrder {
  id          String      @id @default(uuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  status      String      // "DRAFT", "CONFIRMED", "PICKED_UP", "RETURNED"
  totalAmount Float
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime    @default(now())
  
  // Invoice & Payment
  paymentStatus String    @default("UNPAID")
  
  lines       OrderLine[]
}

model OrderLine {
  id          String      @id @default(uuid())
  orderId     String
  order       RentalOrder @relation(fields: [orderId], references: [id])
  productId   String
  product     Product     @relation(fields: [productId], references: [id])
  quantity    Int
  price       Float
}